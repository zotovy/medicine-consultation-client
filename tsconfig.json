{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "types": [
      "node",
      "jest",
      "webdriverio",
      "@wdio/sync",
      "expect-webdriverio",
      "wdio-wiremock-service"
    ]
  },
  "include": [
    "*.tsx",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
